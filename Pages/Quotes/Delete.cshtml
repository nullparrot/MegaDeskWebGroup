@page
@model MegaDeskWebGroup.Pages.Quotes.DeleteModel
@{
    ViewData["Title"] = "Delete Quote";
}
<div class="container my-4">
    <h1>Delete Quote</h1>
    <h3>Are you sure you want to delete this?</h3>
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="mb-0">Delete</h4>
        </div>
        <div class="card-body">
            <p class="text-danger mb-3">Are you sure you want to delete this quote?</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.CustomerName)</span>
                    <span>@Html.DisplayFor(model => model.Quote.CustomerName)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.QuoteDate)</span>
                    <span>@Html.DisplayFor(model => model.Quote.QuoteDate, "{0:MM/dd/yyyy HH:mm:ss}")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.TotalCost)</span>
                    <span>@Html.DisplayFor(model => model.Quote.TotalCost, "{0:C}")</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.Width)</span>
                    <span>@Html.DisplayFor(model => model.Quote.Width)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.Depth)</span>
                    <span>@Html.DisplayFor(model => model.Quote.Depth)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.DrawerCount)</span>
                    <span>@Html.DisplayFor(model => model.Quote.DrawerCount)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.SurfaceMaterial)</span>
                    <span>@Html.DisplayFor(model => model.Quote.SurfaceMaterial)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">@Html.DisplayNameFor(model => model.Quote.RushDays)</span>
                    <span>@Html.DisplayFor(model => model.Quote.RushDays)</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span class="fw-medium">Due Date</span>
                    <span>@((int)Model.Quote.RushDays > 0 ? Model.Quote.QuoteDate.AddDays((int)Model.Quote.RushDays).ToString("MM/dd/yyyy") : "N/A")</span>
                </li>
            </ul>
            <div class="mt-3">
                <button type="button" class="btn btn-danger" style="background-color: #F56565; border-color: #F56565;" data-bs-toggle="modal" data-bs-target="#deleteModal">Delete</button>
                <a asp-page="./Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back to List</a>
            </div>

            <!-- Bootstrap Modal -->
            <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Are you sure you want to delete the quote for @Model.Quote.CustomerName?
                        </div>
                        <div class="modal-footer">
                            <form method="post">
                                <input type="hidden" asp-for="Quote.Id" />
                                <button type="submit" class="btn btn-danger" style="background-color: #F56565; border-color: #F56565;">Delete</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>